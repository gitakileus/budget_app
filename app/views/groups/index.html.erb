<div id='categories'>
  <h1>Categories</h1>

  <% @groups.each do |group| %>
    <%= link_to group, :action => 'go', class: 'category_link' do %>
      <div class='category'>
        <p class='icon'><%= group.icon %></p>
        <div class='name_date'>
          <p><%= group.name %></p>
          <p><%= group.created_at.strftime('%d-%b-%Y') %></p>
        </div>
        <p class='total_amount'><%= group.total_amount %></p>
      </div>
    <% end %>
  <% end %>

  <%= link_to 'create new category', '/groups/new' %>
</div>