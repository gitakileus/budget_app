<div id='payments'>
  <div class='back_title'>
    <%= link_to '/groups', class: 'payment_back' do %>
      <i class="fa fa-arrow-left fa-2x"></i>
    <% end %>
    <h1>Payments</h1>
  </div>

  <div class='payments_section'>
    <p class='total_payment'>Total Payment: <%= @group.total_amount %></p>

    <% @payments.each do |payment| %>
        <div class='payment'>
        <div class='name_date_payments'>
          <p><%= payment.name %></p>
          <p><%= payment.created_at.strftime('%d-%b-%Y') %></p>
        </div>
          <p>$<strong><%= payment.amount %></strong></p>
        </div>
    <% end %>
  </div>

  <div class='new_payment'>
    <%= link_to 'ADD NEW PAYMENT', new_group_payment_path(group_id: @group), class: 'add_new_payment' %>
  </div>
</div>