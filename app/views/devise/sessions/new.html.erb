<div id='login'>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='login_bar'>
      <%= link_to '/', class: 'signup_back' do %>
        <i class="fa fa-arrow-left fa-2x"></i>
      <% end %>
      <h2>LOGIN</h2>
      <div class="actions_login">
        <%= f.submit "Log in" %>
      </div>
    </div>

    <div class="field">
      <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: 'Password', autocomplete: "current-password" %>
    </div> 

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <% f.check_box :remember_me %>
        <% f.label :remember_me %>
      </div>
    <% end %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
