<div id='signup'>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class='signup_back_title'>
      <%= link_to '/', class: 'signup_back' do %>
        <i class="fa fa-arrow-left fa-2x"></i>
      <% end %>
      <h2>Sign up</h2>

      <div class="submit_actions">
        <%= f.submit "Next" %>
      </div>
    </div>

    <div class="signup_field">
      <%= f.text_field :name, placeholder: 'Name', autofocus: true, autocomplete: "full name" %>
    </div>

    <div class="signup_field">
      <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email" %>
    </div>

    <div class="signup_field">
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, placeholder: 'Password', autocomplete: "new-password" %>
    </div>

    <div class="signup_field">
      <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', autocomplete: "new-password" %>
    </div>
  <% end %>
</div>
