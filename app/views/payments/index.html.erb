<div id='payments'>
  <h1>Payments</h1>

  <% @payments.each do |payment| %>
      <div class='payment'>
        <p><%= payment.name %></p>
        <p><%= payment.amount %></p>
        <p><%= payment.created_at.strftime('%d-%b-%Y') %></p>
      </div>
  <% end %>

  <%= link_to 'Add new payment', '/payments/new' %>
</div>